
@{
    ViewBag.Title = "Create";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <h2>Crear Categoría</h2>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-title">
                <h3>Ingrese los datos de la categoría a crear</h3>
            </div>
            <div class="ibox-content">
                <form method="post" action="/Categorias/Create">
                    <div class="form-group row">
                        <label class="col-2 text-right">Nombre:</label>
                        <div class="col-10">
                            <input type="text" name="nombre" id="nombre" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-2 text-right">Descripción:</label>
                        <div class="col-10">
                            <input type="text" id="descripcion" name="descripcion" class="form-control" />
                        </div>
                    </div>
                    <div class="text-center">
                        <input type="button" value="Limpiar" id="limpiar" class="btn btn-secondary" />
                        <input type="submit" value="Guardar" id="guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
    $('#guardar').click(function (e) {
        if ($('#nombre').val().trim() == '') {
            alert('Ingrese nombre');
            e.preventDefault();
        }
    });

    $('#limpiar').click(function () {

        $('#nombre').val('');
        $('#descripcion').val('');
        
    });

</script>
