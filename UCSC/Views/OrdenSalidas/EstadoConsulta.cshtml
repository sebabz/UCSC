<div class="modal fade" id="modalEdit"></div>

<script>
    

    $('#id_pedido').click(function () {
        let url = '/OrdenSalidas/PopupEstadoConsulta';
        let data = $('#id_pedido').val();
        $.get(url, function (data) {
            $('#modalEdit').html(data);
            $('#modalEdit').modal('show');
        });
    });

</script>