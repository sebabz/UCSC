<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="refresh" content="1800;url=../Usuario/Logout" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/fonts/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Scripts/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/Scripts/app/inspinia.js"></script>
    <script src="~/Scripts/plugins/pace/pace.min.js"></script>

</head>
<body>
    <div id="wrapper">
        <!--MENU-->
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="profile-element">
                            <a href="#">

                                <span class="block m-t-xs font-bold">@Session["usuario"]</span>
                                <span class="text-muted text-xs block">@Session["tipoUsuario"]</span>
                            </a>
                        </div>
                        <div class="logo-element">
                            SI
                        </div>
                    </li>
                    <!--Agregar links al menú -->
                    @if (Session["tipoUsuario"] != null)
                    {

                        if (Session["tipoUsuario"].Equals("Administrador"))
                        {
                            @Html.Partial("_MenuAdmin")
                        }
                        if (Session["tipoUsuario"].Equals("Encargado"))
                        {
                            @Html.Partial("_MenuEncargado")
                        }
                        if (Session["tipoUsuario"].Equals("Usuario"))
                        {
                            @Html.Partial("_MenuUsuario")
                        }
                    }
                    else
                    {
                        Response.Redirect("~/");
                    }



                </ul>
            </div>
        </nav>
        <!--FIN MENU-->

        <div id="page-wrapper" class="gray-bg">
            <!--TOP NAVBAR-->
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top white-bg" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <center>
                            <img src="https://i.ibb.co/HnMSrgQ/descarga.jpg" class="img-fluid" alt="Responsive image">
                            </center>
                            
</div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li style="padding:20px">
                            <h3><strong>Sistema de Gestión y Seguimiento de EPP </strong></h3>
                        </li>
                        <li>
                            <a href="@Url.Action("Logout","Usuarios")">
                                <i class="fa fa-sign-out"></i> Desconectarse
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div>
                @*<a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>*@
            </div>
            <!--FIN TOP NAVBAR-->
            @RenderBody()
        </div>
    </div>
</body>



</html>

