@model IEnumerable<UCSC.Models.OrdenEntrada>
@{
    ViewBag.Title = "Index";
}

<div>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap5.min.css">
    <h2>Historial Ordenes de entradas</h2>

</div>
<hr />
<div class="dataTables_wrapper dt-bootstrap4">
    <table id="tabla" class="table table-striped table-bordered" style="width:100%">

        <thead>
            <tr>
                <th class="">Número Orden</th>
                <th>Fecha Ingreso</th>
                <th>Usuario Ingreso</th>
                <th>Comentario</th>
                <th>Ver detalles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id_orden</td>
                    <td>@item.fecha.ToShortDateString()</td>
                    <td>@item.Usuario.nombre</td>
                    <td>@item.comentario</td>
                    <td style="white-space: nowrap">
                        <a href="@Url.Action("DetalleOrden","OrdenEntradas",new { id = item.id_orden })" target="_blank" class="btn btn-warning">
                            <i class="fa fa-list"></i>
                        </a>
                    </td>
                </tr>
            }




        </tbody>
    </table>
</div>

<div>

</div>





<script src="~/Scripts/plugins/moment.min.js"></script>


<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap4.min.js"></script>




<script>
    $(document).ready(function () {
        $('#tabla').DataTable();
    });
</script>