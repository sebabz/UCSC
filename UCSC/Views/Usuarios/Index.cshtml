@model IEnumerable <UCSC.Models.Usuario>

@{
    ViewBag.Title = "Usuarios";
}



<div class="row wrapper border-bottom white-bg page-heading">
    <h2>Gestionar Usuarios</h2>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox-title">
                <h2>Lista de Usuarios</h2>
            </div>
            <div class="ibox-content">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Rut</th>
                            <th>E-mail</th>
                            <th>Estado</th>
                            <th>Tipo</th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.nombre</td>
                                <td>@item.apellido</td>
                                <td>@item.rut</td>
                                <td>@item.email</td>
                                <td>@item.Estado.nombre</td>
                                <td>@item.TipoUsuario.nombre</td>
                                <td>
                                    <button class="btn btn-warning" data-toggle="modal"
                                            data-url="@Url.Action("Edit","Usuarios",new { id = item.id_usuario })">
                                        <i class="fa fa-edit"></i> Editar
                                    </button>
                                    <button class="btn btn-danger" data-toggle="modal"
                                            data-url="@Url.Action("Delete","Usuarios", new { id = item.id_usuario })">
                                        <i class="fa fa-trash"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                        }


                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="modalEdit"></div>
<div class="modal fade" id="modalDelete"></div>
<script>
    $('.btn-warning').click(function () {
        let url = $(this).data('url');
        $.get(url, function (data) {
            $('#modalEdit').html(data);
            $('#modalEdit').modal('show');
        });
    });
    $('.btn-danger').click(function () {
        let url = $(this).data('url');
        $.get(url, function (data) {
            $('#modalDelete').html(data);
            $('#modalDelete').modal('show');
        });
    });

</script>

